@section Scripts {
<script>
   

    fetch("https://type.fit/api/quotes")
    .then(function(response) {
      return response.json();
    })
    .then(function(data) {
        const container = document.querySelector("#container");

        let items = container.querySelectorAll("div > div > div > .quote");

        let itemsToArray = Array.from(items);

          for(let i = 0; i < itemsToArray.length; i++) {
              itemsToArray[i].innerHTML = `<p>${data[Math.floor(Math.random() * 1642) + 1].text}<p>
                                            <figcaption>- ${data[Math.floor(Math.random() * 1642) + 1].author}`;
          }

          });
</script>
}