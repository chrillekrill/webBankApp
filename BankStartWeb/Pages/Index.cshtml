@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4 p-3">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
</div>
