@page
@model BankAppWeb.Pages.Accounts.SendTransactionViewModel
@{
}
<div class="container">
    <div class="card" style="width: 30rem;">
    <div class="card-header">
        <h1>New transaction</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="account">From</label>
                <select class="form-control" asp-for="account" asp-items="@Model.AllAccounts" >
                </select>
                <span asp-validation-for="account" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="account">To</label>
                <input class="form-control" asp-for="account">
                <span asp-validation-for="account" class="field-validation-error"></span>
            </div>
            <button type="submit" class="btn btn-outline-success">Send</button>

        </form>

    </div>
</div>
</div>
